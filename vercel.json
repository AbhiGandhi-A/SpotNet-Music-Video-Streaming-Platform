{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "DB_HOST": "your_mysql_host",
    "DB_USER": "your_mysql_user",
    "DB_PASSWORD": "your_mysql_password",
    "DB_NAME": "flask_db",
    "DB_PORT": "3306"
  }
}
